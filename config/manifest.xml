<?xml version="1.0" encoding="utf-8" ?>
<manifest>

    <!-- Default application properties -->
    <app>
        <color>#4e827d</color>
    </app>
    
    <locale>
        <text name="actions">Actions</text>
        <text name="system">System</text>
    </locale>    

    <!-- Default system sidebar -->
	<bar>

        <width>170</width>
	
        <component type="Image">
            <data service="sidebar.appimage" />
        </component>
        
        <component type="ActionList">
            <data service="sidebar.systemactions" />
            <title>$locale.system</title>
        </component>
        
        <component type="ActionList">
            <data service="sidebar.viewactions" />
            <title>$locale.actions</title>
        </component>
        
        <component type="ActionList">
            <data service="sidebar.sessionactions" />
        </component>
        
    </bar>
	
</manifest>